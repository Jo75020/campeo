        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Overview", root_path, class: "nav-link active-nav" %>
        </li>
        <li class="nav-item">
          <%= link_to "How it works", how_it_works_path, class: "nav-link", id:'how-it-works' %>
        </li>
        <li class="nav-item">
          <%= link_to "Pricing", pricing_path, class: "nav-link", id:'pricing' %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link", id:'contact' %>
        </li>
        <li class="nav-item">
          <%= link_to "Start now", new_user_session_path, class: "btn btn-flat" %>
